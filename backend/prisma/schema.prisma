datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Usuario para login
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // guardada encriptada con bcrypt
  createdAt DateTime @default(now())
  tasks     Task[]
}

// Tarea del tablero
model Task {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  status    Status   @default(PENDIENTE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int?        // clave for√°nea
  user   User?       @relation(fields: [userId], references: [id])

}

// Estado de las tareas
enum Status {
  PENDIENTE
  EN_CURSO
  FINALIZADO
}
