datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- Usuario ---
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // hash bcrypt
  createdAt DateTime @default(now())

  boards    Board[] 
}

// --- Tablero ---
model Board {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  ownerId Int
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  tasks   Task[]

  @@index([ownerId])
  @@unique([ownerId, name])
}

// --- Tarea ---
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  priority    String   @default("Media")
  storyPoints Int      @default(1)
  status      Status   @default(PENDIENTE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  boardId Int
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId])
}

enum Status {
  PENDIENTE
  EN_CURSO
  FINALIZADO
}
